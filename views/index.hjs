<!DOCTYPE html>
<html>
  <head>

    <title>{{ title }}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script type="text/javascript" src="/javascripts/jquery.js"></script>

  </head>
  <body>

    <div id="remote">

      <div class="grid1 gridtop">
        <div class="element">
          <div class="scroll">
            &nbsp;
            <div class="scroll_inner" id="songname">
              ---
            </div>
          </div>
        </div>
      </div>

      <div class="grid3 grid">
        <span id="songprev" class="element prev">
          <<
        </span>
        <span id="songplaypause" class="element play_pause">
          >
        </span>
        <span id="songnext" class="element next">
          >>
        </span>
        <div class="clear"></div>
      </div>

      <!--<div class="grid3 grid">
        <span id="songdec" class="element dec">
          -
        </span>
        <span class="element proc">
          <span class="songvolume">
            &nbsp;
            <span class="process"></span>
            <span class="processtext">100%</span>
          </span>
        </span>
        <span id="songinc" class="element inc">
          +
        </span>
        <div class="clear"></div>
      </div>-->

      <div class="grid1 gridbottom">
        <div class="element">

          <div class="tab">
            <span class="element tab active" data-for="tab1c">Next</span>
            <span class="element tab" data-for="tab2c">S</span>
            <span class="element tab" data-for="tab3c">O</span>
            <div class="clear"></div>
          </div>

          <div class="tabcontent">
            <div class="tabc tab1c active">This is the next content</div>

            <div class="tabc tab2c">
              <input type="text" id="songsearch" placeholder="Search" />
            </div>

            <div class="tabc tab3c">This is the options content</div>
          </div>

        </div>
      </div>

    </div>

    <script type="text/javascript" src="/javascripts/main.js"></script>
  </body>
</html>
