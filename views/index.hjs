<!DOCTYPE html>
<html>
  <head>

    <title>{{ title }}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script type="text/javascript" src="/javascripts/jquery.js"></script>

    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />

  </head>
  <body>

    <div id="remote">

      <div class="grid1 gridtop">
        <div class="element">
          <div class="scroll">
            &nbsp;
            <div class="scroll_inner" id="songname">
              ---
            </div>
          </div>
        </div>
        <div class="element timeproc">
          <div id="timeproc"></div>
        </div>
      </div>

      <div class="grid3 grid">
        <span id="songprev" class="element prev">
          I<<
        </span>
        <span id="songplaypause" class="element play_pause">
          >
        </span>
        <span id="songnext" class="element next">
          >>I
        </span>
        <div class="clear"></div>
      </div>

      <div class="grid3 grid">
        <span id="songdec" class="element dec">
          -
        </span>
        <span class="element proc">
          <span class="songvolume">
            &nbsp;
            <span class="process" id="volumeprocess"></span>
            <span class="processtext" id="volumetext">100%</span>
          </span>
        </span>
        <span id="songinc" class="element inc">
          +
        </span>
        <div class="clear"></div>
      </div>

      <div class="grid1 gridbottom">
        <div class="element">

          <div class="tab">
            <span class="element tab active" data-for="tab1c">
              <span class="line"></span>
              <span class="line"></span>
              <span class="line"></span>
            </span>
            <span class="element tab" data-for="tab2c"><img src="/images/search.png" width="23" height="22" alt="" /></span>
            <span class="element tab" data-for="tab3c"><img src="/images/settings.png" width="23" height="24" alt="" /></span>
            <div class="clear"></div>
          </div>

          <div class="tabcontent">
            <div class="tabc tab1c active">
              Next Songs
            </div>

            <div class="tabc tab2c">
              <input type="text" id="songsearch" placeholder="Search" />
              <div id="search_result"></div>
            </div>

            <div class="tabc tab3c">
              Options
            </div>
          </div>

        </div>
      </div>

    </div>

    <script type="text/javascript" src="/javascripts/main.js"></script>
  </body>
</html>
